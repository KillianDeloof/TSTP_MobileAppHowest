        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackLayout Grid.Row="0" Grid.Column="0" BackgroundColor="#eeeeee" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <Label Text = "Overview" FontSize="Large"/>
                <Editor Text="{ Binding Subject }" x:Name="Message"/>
                <Label Text="Category:"/>
                <Button Text="Category"
                        Command="{ Binding CategoryCommand }"
                        x:Name="btnCategory"
                        BackgroundColor="#44c8f5"
                        TextColor="White"
                        BorderRadius="10">
                    

                </Button>
                <Label Text="Location:"/>
                <Button Text="No location selected"
                        Command="{ Binding LocationCommand }" 
                        x:Name="Location"
                        BackgroundColor="#44c8f5"
                        TextColor="White"/>
            </StackLayout>

            <StackLayout Grid.Row="1" Orientation="Horizontal" Grid.Column="0" BackgroundColor="White" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <Editor Text="{ Binding Message }" MinimumWidthRequest="100" WidthRequest="250" HorizontalOptions="FillAndExpand"/>
                <Button x:Name="btnPic" Command="{ Binding PictureCommand }" Image="ic_photo_camera_black_24dp.png" BackgroundColor="#00FFFFFF"/>
                <Button x:Name="btnAttach" Command="{ Binding AttachCommand }" Image="ic_attach_file_black_24dp.png" BackgroundColor="#00FFFFFF"/>
                <Button x:Name="btnSend"  Command="{ Binding SendCommand }" BackgroundColor="#45c8f5" Image="ic_send_white_24px.png"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>


</ContentPage>