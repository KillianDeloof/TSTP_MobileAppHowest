<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAppHowest.Views.MessagePage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="250*"/>
                <RowDefinition Height="75*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1" x:Name="MessageBar">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!--<TextBox x:Name="txtMessage"   Text="Message..." />-->
                <!--<Editor Text="Type your message..."-->

                <Button x:Name="btnPic"  Text="Camera" Grid.Column="1"/>
                <Button x:Name="btnAttach"  Text="Attachment" Grid.Column="2"/>

                <Button x:Name="btnSend"  Text="Send" Grid.Column="3" BackgroundColor="#45c8f5"/>
            </Grid>
        </Grid>
        
    </ContentPage.Content>
</ContentPage>